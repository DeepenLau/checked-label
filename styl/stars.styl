@import "core.styl"

.stars
  display flex
  font-size 3rem

  input
    display none

    &:checked
      + label
        &:before,
        & ~ label:before
          color red
          content: '\f005'

      for n in 1..5
        $count = 6 - n
        &:nth-of-type({$count}) ~ .description:after
          $option = data-option- + n
          content attr($option)

  label
    display block
    cursor pointer

    &:not(first-of-type)
      margin-left .5rem

    &:before
      font-family 'FontAwesome'
      content '\f006'

    &:hover
      &:before,
      ~ label:before
        color red
        content '\f005'

    for n in 1..5
      &:nth-of-type({n})
        order 5 - n

  .description
    order 10