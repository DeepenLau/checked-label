@import "core.styl"

.input-tags
  border 1px solid gray
  display flex
  flex-direction row
  flex-wrap wrap
  padding 0 .25rem .25rem 0

  input[type=checkbox]
    display none

  label
    background-color green
    color white
    line-height 2.5rem
    padding 0 3rem 0 .75rem
    margin .25rem 0 0 .25rem
    position relative
    cursor pointer

    &:hover
      background-color lighten(green, 10%)

    &:after
      content: '\f00d'
      font-family 'FontAwesome'
      position absolute
      top .75rem
      right .75rem
      line-height 1rem
      border-left 1px solid white
      width 1.5rem
      text-align right

  input
    border none
    line-height 2.5rem
    padding .25rem .25rem 0